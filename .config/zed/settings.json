// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ssh_connections": [
    {
      "host": "l.macmachine",
      "projects": [
        {
          "paths": [
            "/mnt/hdd/gitea_data"
          ]
        },
        {
          "paths": [
            "/mnt/ssd"
          ]
        }
      ]
    }
  ],
  "icon_theme": "Material Icon Theme",
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_family": "Liga SFMono Nerd Font",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  }
}
